<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/head.ejs')%>
    <title>Drumat - Shop</title>
</head>

<body class="paginas">
    
    <nav>
        <%-include('../partials/nav.ejs')%>
    </nav>

    <main>
        <div class="d-flex container-fluid justify-content-end">
            <form action="" class="carrito">
                <button type="" class="btn btn-success text-black m-1 tachado">Ver Carrito</button>
                <button type="" class="btn btn-success text-black m-1 tachado">Vaciar Carrito</button>
                <button type="" class="btn btn-success text-black m-1 tachado">Finalizar Compra</button>
            </form>
        </div>
        
        <div class="container-lg justify-content-center mt-2 pt-2 mb-5 pb-5">
            <div class="row rows-col-auto">
                <% data.forEach((prod)=>{ %>
                    <div class="col">
                        <div class="card bg-dark text-white borde_card m-1" style="width: 18rem;">
                            <img src="<%=prod.img_drumh%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%=prod.nom_drumh%></h5>
                                <p class="card-text"><%=prod.desc_drumh%> <br> Precio: $<%=prod.prec_drumh%></p>
                                <a href="#" class="btn btn-success text-black">Agregar</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="row rows-col-auto">
                <% data.forEach((prod)=>{ %>
                    <div class="col">
                        <div class="card bg-dark text-white borde_card m-1" style="width: 18rem;">
                            <img src="<%=prod.img_cymb%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%=prod.nom_cymb%></h5>
                                <p class="card-text"><%=prod.desc_cymb%> <br> Precio: $<%=prod.prec_cymb%></p>
                                <a href="#" class="btn btn-success text-black">Agregar</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="row rows-col-auto">
                <% data.forEach((prod)=>{ %>
                    <div class="col">
                        <div class="card bg-dark text-white borde_card m-1" style="width: 18rem;">
                            <img src="<%=prod.img_drum%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%=prod.nom_drum%></h5>
                                <p class="card-text"><%=prod.desc_drum%> <br> Precio: $<%=prod.prec_drum%></p>
                                <a href="#" class="btn btn-success text-black">Agregar</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>      
    </main>

    <!-- Canvas que aparece al hacer click en el boton de mail que se encuentra en el footer -->
    <section>
        <%-include('../partials/canvas_mail.ejs')%>
    </section>

    <footer>
        <%-include('../partials/footer.ejs')%>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>   
</body>
</html>